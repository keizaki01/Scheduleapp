<h3>スケジュール詳細</h3>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @user.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @user.start %></td>
    </tr>
    <tr>
        <th>投稿日時</th>
        <td><%= @user.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @user.alldaylong %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @user.memo %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to"スケジュール一覧に戻る", :users %></li>
        <li><%= link_to"スケジュール編集", edit_user_path(params[:id]) %></li>　
        <li><%= link_to"スケジュール削除", user_path(params[:id]), method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
    </ul>
</div>
